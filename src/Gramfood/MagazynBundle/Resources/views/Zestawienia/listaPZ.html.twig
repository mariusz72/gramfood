<script language="javascript">

{% include ':gramfood:jsBase.html.twig' %}  

var dataSet = [

    {% for entity in entities %}
    {% set pozostalo = (entity.il - (entity.sumk + entity.sumwz)) %}
    [
        "",
        "{{ entity.id }}",
        "{{ entity.typ|e('html_attr')  }}",
        "{{ entity.nrr|e('html_attr')  }}",
        "{{ entity.idf|e('html_attr')  }}",
        "{{ entity.idwz|e('html_attr')  }}",
        "{{ entity.idpz|e('html_attr')  }}",
        "{{ entity.data|e('html_attr')  }}",
        "{{ entity.alias|e('html_attr')  }}",
        "{{ entity.kod|e('html_attr') }}",
        "{{ entity.nazw|e('html_attr') }}",
        "{{ entity.il }}",
        "{{ pozostalo|number_format(2,'.','') }}",
        "{{ entity.sumk }}",        
        "{{ entity.jm|e('html_attr')  }}",
        "{{ entity.kat|e('html_attr')  }}",
        "{{ entity.sn|e('html_attr') }}",
        "{{ entity.dwaz|e('html_attr')  }}",
        "{{ entity.sumwz }}"
    ],
    {% endfor %}

];


function format ( d ) {

	var path = setURL("{{ path('gramfood_magazyn_kompletacje_listaPZ', { 'id': '<path>' }) }}",d[1]) ;
    var pathWz = setURL("{{ path('gramfood_magazyn_listaWZzSn', { 'id': '<path>' }) }}",d[1]) ;
    var pathRozchody = setURL("{{ path('gramfood_zestawienia_listaRozchodow', { 'id': '<path>' }) }}",d[1]) ;

	if( parseFloat(d[18]) ) {var sum_wz = parseFloat(d[18]);} else {var sum_wz = 0;};
	if( parseFloat(d[13]) ) {var sum_rw = parseFloat(d[13]);} else {var sum_rw = 0;};

    return '<table width="100%" cellpadding="5" cellspacing="0" border="0" style="padding-left: 50px; border-collapse: separate;">'+
        '<tr>'+
     	   '<th width="150px">ID</th><td  width="300px">'+
            
            '<div class="btn-group">'+
            '<button data-toggle="dropdown" class="btn btn-default btn-xs dropdown-toggle" type="button" aria-expanded="false">'+
            d[1]+ 
            '    <span class="caret"></span>'+
            '</button>'+
            '<ul role="menu" class="dropdown-menu">'+
            '    <li><a href="'+path+'">Pokaż Kompletacje</a></li>'+
            '    <li><a onclick="document.getElementById(\'showRap'+d[1]+'\').submit();">Pokaż Sprzedaż</a></li>'+    
            '   <li><a onclick="window.open(\''+pathRozchody+'\',\'print_'+d[1]+'\',\'menubar=1, toolbar=1, scrollbars=1, width=900px,height=1000px\')" href="javascript:void(0);">Pokaż Raport Rozchodów</a></li>'+
            '</ul>'+
            '</div>'+            

            '</td>'+
        '</tr>'+
        '<tr>'+            
       		 '<th>Typ</th><td> '+d[2]+'</td>'+'<th  width="150px">Suma WZ</th><td> '+sum_wz+'</td>'+
        '</tr>'+
        '<tr>'+          
       		 '<th>IDf</th><td> '+d[4]+'</td>'+'<th>Suma RW</th><td> '+sum_rw+'</td>'+
        '</tr>'+
         '<tr>'+
            '<th>Data ważności</th><td> '+d[17]+'</td>'+
        '</tr>'+
        '</table>'+

        '<form action="'+pathWz+'" id="showRap'+d[1]+'" method="post">'+
        '<input name="form[_token]" id="form__token" type="hidden" value="c2ccc82cd293610b035a6c8f2069e5fe8387b86f">'+
        '<input name="sn" id="sn" type="hidden" value="'+d[16]+'">'+    
        '</form>';
}


$(document).ready(function() {


    $('#listaWz tfoot td').each( function (i) {
        var title = $(this).text();
        if(i>=0){
        $(this).html( '<input id="cnn'+i+'" type="text" placeholder="*" />' );
        };
    } );    
    	

    var table = $('#listaWz').DataTable({
        data: dataSet,
       // stateSave: true, //zapamietuje stan tabeli, aby wrocic do tego samego miejsca
        order: [[ 1, 'desc' ]],
        columns: [
            {
                "className":      'details-control',
                "orderable":      false,
                "data":           null,
                "width": "20px", 
                "defaultContent": ''
            },
            { title: "Id" }, 
            { title: "Typ", "visible": false },
            { title: "NrR" },
            { title: "IDf", "visible": false },
            { title: "IdWZ", "visible": false },
            { title: "IdPZ", "visible": false },
            { title: "Data" },
            { title: "Alias" },
            { title: "Kod" , "width": "20px"},
            { title: "Nazwa" },
            { title: "Ilość" , "width": "20px"},
            { title: "Pozostało", "width": "20px",
            	"render": function ( data, type, row ) {
                	var poz = row[12];
                    return '' + poz + '';
                },
            },
            { title: "%",
            	"render": function ( data, type, row ) {
                	//var proc = parseInt(parseFloat(row[13]+row[18])*100 / parseFloat(row[11]));
                	var proc = parseFloat( row[12] )*100 / parseFloat(row[11]);
                	if(isNaN(proc)) {proc = 0;};
                	//var proc = parseFloat(100 - proc);
                	               	
                    if(proc > 0 &&  proc < 101) {
	                    var inf = '<div class="progress-bar bg-green" role="progressbar" data-transitiongoal="'+proc+'" style="width: '+proc+'%; height: 20px !important;">'+parseInt(proc)+'</div>';
                    }else if (proc > 100 || proc < 0){
                    	var inf = '<div class="progress-bar bg-red" role="progressbar" data-transitiongoal="100" style="width: 100%; height: 20px !important;"></div>';                        
                    } else {
                    	var inf = '';
                    }

                	
                    return '' +
                    '<div class="progress progress_sm" style="width: 100%; height: 20px !important;">'+ 
                    inf +
                    '</div>';
                },                               
            },            
            { title: "JM" },
            { title: "Kat", "visible": false, },
            { title: "SN" },
            { title: "DataWaz", "visible": false, },
            { title: "SumWZ", "visible": false, },
            { title: "SumRW", "visible": false, 
            	"render": function ( data, type, row ) {
                    return row[13];
                },
            }
        ],

        });


 // Add event listener for opening and closing details

    $('#listaWz tbody').on('click', 'td.details-control', function () {
        var tr = $(this).closest('tr');
        var row = table.row( tr );

        if ( row.child.isShown() ) {
            // This row is already open - close it
            row.child.hide();
            tr.removeClass('shown');
        }

        else {
            // Open this row
            row.child( format(row.data(), row.index()) ).show();
            tr.addClass('shown');
        }
    } );



    /*
     * Wspólne JS dla datatable
     */
     
         // Apply the search
         table.columns().every( function (colIdx) {
             var that = this;
             $( 'input', this.footer() ).on( 'keyup change input', function () {
                 if ( that.search() !== this.value ) {
                    $('input', table.column(colIdx).footer()).addClass( "input_borger_red" );  
                     that
                         .search( this.value, true, false, true )
                         .draw();
                 }
                 if ( that.search() == '' ) {
                     $('input', table.column(colIdx).footer()).removeClass(); 
                     table.draw();
                 }
               
                
             } );
         } );   

         // Restore state - aktualizacjia value w imputach search
         var state = table.state.loaded();
         if (state) {
             table.columns().eq(0).each(function (colIdx) {
                 var colSearch = state.columns[colIdx].search;
                 $('input', table.column(colIdx).footer()).addClass( "" );
                 if (colSearch.search) {
                     $('input', table.column(colIdx).footer()).val(colSearch.search);
                     $('input', table.column(colIdx).footer()).addClass( "input_borger_red" );
                 }
             });

             table.draw();
         } 
    
    
} );  




</script>

